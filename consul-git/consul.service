[Unit]
Description=Consul agent
Wants=basic.target
After=basic.target network.target

[Service]
User=consul
Group=consul
PIDFile=/var/run/consul.pid
ExecStart=consul agent -config-dir /etc/consul
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
